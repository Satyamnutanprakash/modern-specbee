{%
  set title_classes = [
    label_display == 'visually_hidden' ? 'visually-hidden',
  ]
%}

{{ attach_library('specbee_theme/slider-block')}}
{{ attach_library('specbee_theme/slick')}}


{% if label_hidden %}
	{% if multiple %}
		<div{{attributes}} class="slider__wrapper">

			{% for item in items %}
				<div{{item.attributes}} class="slide">
					{{item.content}}
				</div>
			{% endfor %}
		</div>
	{% else %}
		{% for item in items %}
			<div{{item.attributes}} class="slide">
				{{item.content}}
			</div>
		{% endfor %}
	{% endif %}
{% endif %}

